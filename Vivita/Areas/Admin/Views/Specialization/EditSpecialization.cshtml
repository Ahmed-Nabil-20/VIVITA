@model SpecializationVM

@{
    ViewData["Title"] = (Model is null? "Add" : "Edit");
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Specialization" asp-action="Index">Specializations</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">@(Model is null ? "Add Specialization" : "Edit Specialization")</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-controller="Specialization" asp-action="SaveSpecialization" method="post" role="form">
                        <div class="card-body">

                            <input type="hidden" asp-for="Id" value="@(Model is null? 0 : Model.Id)" />

                            @*Name_EN*@
                            <label for="exampleInputEmail1">Name (EN)</label>
                            <div class="form-group">
                                <input asp-for="Name_EN" type="text" class="form-control" id="exampleInputEmail1" />
                                <span asp-validation-for="Name_EN" class="text-danger"></span>
                            </div>

                            @*Name_AR*@
                            <label for="exampleInputEmail2">Name (AR)</label>
                            <div class="form-group">
                                <input asp-for="Name_AR" type="text" class="form-control" id="exampleInputEmail2" />
                                <span asp-validation-for="Name_AR" class="text-danger"></span>
                            </div>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn-lg btn-success">@(Model is null? "Add": "Edit")</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_Notification");
    }
}