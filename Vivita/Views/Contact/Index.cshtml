                    <div class="pq-contact-box-icon">
                        <div class="icon animation-grow"> <i aria-hidden="true" class="ion ion-email-unread"></i> </div>
                    </div>
                    <div class="pq-contact-box-info">
                        <h4 class="pq-contact-box-title">
                            Mail Us
                        </h4>
                        <p class="pq-contact-box-description">
                            vivita@gmail.com
                            <br>
                            vivita@gmail.com
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--============= Information End ===============-->
<!--============= Contact-Form Start ===============-->
<section class="get-in-touch p-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8  pq-form-box" data-aos-delay="100" data-aos-duration="800" data-aos="fade-down">
                <div class="form-container">
                    <div class="pq-section pq-style-1 text-center p-0">
                        <span class="pq-section-sub-title">contact us</span>
                        <h5 class="pq-section-title">Get in touch with us</h5>
                    </div>
                </div>
                <div class="pq-applyform-whitebg text-start">
                    <form asp-controller="Contact" asp-action="SendMessage" role="form" method="post" class="pq-applyform">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <input asp-for="Name" type="text" class="name-field" placeholder="Enter Your Name" required>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <input asp-for="Email" type="email" class="e-mail-field" placeholder="Enter Your Email" required>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <input asp-for="Phone" type="number" class="phone-number-field" placeholder="Enter Your Phone Number" required>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <input asp-for="Subject" type="text" class="subject-field" placeholder="Subject" required>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <textarea asp-for="Message" cols="40" rows="10" placeholder="Write Your Message" required></textarea>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <button type="submit" class="pq-button form-btn">
                                    <div class="pq-button-block">
                                        <span class="pq-button-text me-0">send message</span>
                                    </div>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--============= Contact-Form End ===============-->
